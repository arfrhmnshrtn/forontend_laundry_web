<script setup>
import { ref, computed, onMounted } from "vue";
import AdminLayout from "../components/AdminLayout.vue";

const showAddModal = ref(false);
const editingCustomer = ref(null);
const searchQuery = ref("");
const alertMessage = ref("");
const showAlert = ref(false);

const formData = ref({
  nama: "",
  no_telp: "",
});

const customers = ref([]);

// Fetch data pelanggan
const fetchData = async () => {
  try {
    const res = await fetch("http://localhost:5000/api/pelanggan");
    customers.value = await res.json();
  } catch (error) {
    console.error("Error fetching pelanggan:", error);
  }
};

onMounted(fetchData);

const displayAlert = (message) => {
  alertMessage.value = message;
  showAlert.value = true;
  setTimeout(() => {
    showAlert.value = false;
  }, 3000);
};

// Filter pencarian
const filteredCustomers = computed(() =>
  customers.value.filter((c) =>
    [c.nama, c.no_telp].some((field) =>
      field.toLowerCase().includes(searchQuery.value.toLowerCase())
    )
  )
);

// CRUD
const saveCustomer = async () => {
  const method = editingCustomer.value ? "PUT" : "POST";
  const url = editingCustomer.value
    ? `http://localhost:5000/api/pelanggan/${editingCustomer.value.id}`
    : "http://localhost:5000/api/pelanggan";

  try {
    await fetch(url, {
      method,
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(formData.value),
    });
    await fetchData();
    closeModal();
    
    const action = editingCustomer.value ? "diperbarui" : "ditambahkan";
    displayAlert(`Pelanggan berhasil ${action}!`);
  } catch (error) {
    console.error("Error saving pelanggan:", error);
  }
};

const editCustomer = (customer) => {
  editingCustomer.value = customer;
  formData.value = { ...customer };
  showAddModal.value = true;
};

const deleteCustomer = async (customer) => {
  if (!confirm(`Hapus pelanggan ${customer.nama}?`)) return;
  try {
    await fetch(`http://localhost:5000/api/pelanggan/${customer.id}`, {
      method: "DELETE",
    });
    await fetchData();
    displayAlert("Pelanggan berhasil dihapus!");
  } catch (error) {
    console.error("Error deleting pelanggan:", error);
  }
};

const closeModal = () => {
  showAddModal.value = false;
  editingCustomer.value = null;
  formData.value = { nama: "", no_telp: "" };
};
</script>
